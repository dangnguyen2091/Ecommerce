@{
    ViewBag.Title = "Detail";
}
<div class="site-section" ng-controller="myController">
    <div class="container">
        <div class="row">
            <div class="col-md-5 mr-auto">
                <div class="border text-center">
                    <img src="{{sanPham.HinhAnhUrl}}" alt="Image" class="img-fluid p-5">
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="text-black">{{sanPham.TenSanPham}}</h2>
                <p>{{sanPham.MoTa}}</p>
                <p><strong class="text-primary h4">{{sanPham.DonGia | number}} VNĐ</strong></p>
                <div class="mb-5">
                    <div class="input-group mb-3" style="max-width: 220px;">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-primary" type="button"
                                    ng-click="giamSoLuong()">&minus;</button>
                        </div>
                        <input type="text" class="form-control text-center" ng-model="soLuong" placeholder=""
                               aria-label="Example text with button addon" aria-describedby="button-addon1" disabled>
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary" type="button"
                                    ng-click="tangSoLuong()">&plus;</button>
                        </div>
                    </div>
                </div>
                <p><a href="#" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary" ng-click="themVaoGioHang()">Thêm vào giỏ</a></p>
                <div class="mt-5">
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                            <table class="table custom-table">
                                <tbody>
                                    <tr ng-repeat="s in sanPham.ThuocTinhs">
                                        <td>{{s.TenThuocTinh | uppercase}}</td>
                                        <td class="bg-light">{{s.GiaTri}} {{s.DonViTinh}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        ngApp.controller('myController', function ($scope, $http, $window) {
            var model = '@Html.Raw(Json.Encode(Model))';
            $scope.sanPham = JSON.parse(model);
            $scope.soLuong = 1;
            $scope.giamSoLuong = function () {
                if ($scope.soLuong == 1) return;
                $scope.soLuong = $scope.soLuong - 1;
            }
            $scope.tangSoLuong = function () {
                $scope.soLuong = $scope.soLuong + 1;
            }
            $scope.themVaoGioHang = function () {
                var gio = {
                    "SanPhamID": $scope.sanPham.SanPhamID,
                    "TenSanPham": $scope.sanPham.TenSanPham,
                    "SoLuong": $scope.soLuong,
                    "DonGia": $scope.sanPham.DonGia,
                    "HinhAnhUrl": $scope.sanPham.HinhAnhUrl
                };
                $http.post("/Home/ThemVaoGioHang/", gio).then(function (r) {
                    var error = r.data;
                    if (error.HasError == true) {
                        $window.alert(error.Message);
                    }
                    else {
                        location.reload();
                    }
                });
            }
        });
    </script>
}